<header>
    <div class="header-container">
        <!-- Logo -->
        <a href="/" class="logo">
            <img src="/s/images/logo.png" alt="RunWatch">
        </a>

        <!-- Main Navigation -->
        <nav class="main-nav">
            <ul>
                <li><a href="/" class="<%= currentPath === '/' ? 'active' : '' %>"><%= __('home') %></a></li>
                <li><a href="#" class="<%= currentPath.startsWith('/movies') ? 'active' : '' %>"><%= __('movies') %></a></li>
                <li><a href="#" class="<%= currentPath.startsWith('/tv') ? 'active' : '' %>"><%= __('tvshows') %></a></li>
                <li><a href="#" class="<%= currentPath.startsWith('/new') ? 'active' : '' %>"><%= __('newreleases') %></a></li>
            </ul>
        </nav>

        <!-- Right Side Controls -->
        <div class="header-controls">
            <!-- Search -->
            <div class="search-container">
                <button class="search-toggle">
                    <svg viewBox="0 0 24 24" width="24" height="24">
                        <path fill="currentColor" d="M15.5 14h-.79l-.28-.27a6.5 6.5 0 0 0 1.48-5.34c-.47-2.78-2.79-5-5.59-5.34a6.505 6.505 0 0 0-7.27 7.27c.34 2.8 2.56 5.12 5.34 5.59a6.5 6.5 0 0 0 5.34-1.48l.27.28v.79l4.25 4.25c.41.41 1.08.41 1.49 0 .41-.41.41-1.08 0-1.49L15.5 14zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
                    </svg>
                </button>
                <form class="search-form" action="/search" method="get">
                    <input type="text" name="q" placeholder="<%= __('Search movies, TV shows...') %>">
                </form>
            </div>

            <!-- Language Selector -->
            <div class="language-selector">
                    <span><a href="?lang=en">ðŸ‡ºðŸ‡¸</a></span>
                    <span><a href="?lang=tr">ðŸ‡¹ðŸ‡·</a></span>
            </div>

            <!-- User Menu -->
            <% if (typeof user !== 'undefined' && user) { %>
            <div class="user-menu">
                    <img src="/s/avatar.png" %>">
                    <a href="/profile/<%= user.uid %>/view"><%= __('profile') %></a>
            </div>
            <% } else { %>
            <div class="user-menu">
                <a href="/login" class="btn"><%= __('login') %></a>
                <a href="/register" class="btn"><%= __('register') %></a>
            </div>
            <% } %>
        </div>
    </div>
</header>